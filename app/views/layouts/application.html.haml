!!! 5
%head
  %title HealthFundIt
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true

%body
  .navbar.navbar-inverse.navbar-fixed-top
    .container
      .navbar-header
        = link_to 'HealthFundIt', root_path, class: 'navbar-brand'
      .collapse.navbar-collapse.navbar-ex1-collapse
        %ul.nav.navbar-nav
          %li{class: @page == :crowd_review ? 'active' : ''}= link_to 'Crowd Review', root_path
          %li{class: @page == :discover ? 'active' : ''}= link_to 'Discover', root_path
          %li{class: @page == :how_it_works ? 'active' : ''}= link_to 'How it Works', root_path
          %li{class: @page == :start ? 'active' : ''}= link_to 'Start', root_path
          %li{class: @page == :login ? 'active' : ''}= link_to 'Login', root_path

  .container.main
    = yield

  = javascript_include_tag 'application', 'data-turbolinks-track' => true
